{
  "version": "2.2.0",
  "type": "module",
  "exports": "./dist/index.js",
  "name": "@stayradiated/jsconfig",
  "description": "My personal config files for Javascript projects.",
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/stayradiated/jsconfig#readme",
  "bugs": {
    "url": "https://github.com/stayradiated/jsconfig/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/jsconfig.git"
  },
  "scripts": {
    "tidy": "xo --fix",
    "test": "vitest --watch=false",
    "build": "rm -rf ./dist && tsc"
  },
  "bin": {
    "jsconfig": "dist/index.js"
  },
  "devDependencies": {
    "@types/node": "20.3.1",
    "typescript": "5.1.3",
    "vitest": "0.32.2",
    "xo": "0.54.2"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "jsconfig",
    "tsconfig",
    "vitest",
    "eslint",
    "prettier",
    "sync",
    "package",
    "config"
  ],
  "dependencies": {
    "rambda": "7.5.0",
    "read-pkg-up": "9.1.0",
    "write-pkg": "5.1.0"
  },
  "__comment": "The following configs are managed by `@stayradiated/jsconfig`",
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
