{
  "version": "1.12.0",
  "type": "module",
  "exports": "./dist/index.js",
  "name": "@stayradiated/jsconfig",
  "description": "My personal config files for Javascript projects.",
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/stayradiated/jsconfig#readme",
  "bugs": {
    "url": "https://github.com/stayradiated/jsconfig/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/jsconfig.git"
  },
  "scripts": {
    "tidy": "xo --fix",
    "test": "ava",
    "build": "del-cli dist && tsc"
  },
  "bin": {
    "jsconfig": "dist/index.js"
  },
  "devDependencies": {
    "@changesets/cli": "2.16.0",
    "@types/node": "15.14.0",
    "ava": "3.15.0",
    "del-cli": "4.0.0",
    "eslint-plugin-fp": "2.3.0",
    "typescript": "4.3.5",
    "xo": "0.40.3"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "jsconfig",
    "tsconfig",
    "ava",
    "eslint",
    "prettier",
    "sync",
    "package",
    "config"
  ],
  "dependencies": {
    "rambda": "6.7.0",
    "read-pkg-up": "8.0.0",
    "write-pkg": "4.0.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended"
    ],
    "rules": {
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off",
      "fp/no-unused-expression": "off",
      "fp/no-nil": "off",
      "fp/no-loops": "off",
      "fp/no-mutation": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "eslintConfig": {
    "extends": "stayradiated"
  }
}
