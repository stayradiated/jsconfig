{
  "version": "1.19.0",
  "type": "module",
  "exports": "./dist/index.js",
  "name": "@stayradiated/jsconfig",
  "description": "My personal config files for Javascript projects.",
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/stayradiated/jsconfig#readme",
  "bugs": {
    "url": "https://github.com/stayradiated/jsconfig/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/jsconfig.git"
  },
  "scripts": {
    "tidy": "xo --fix",
    "test": "ava",
    "build": "del-cli dist && tsc"
  },
  "bin": {
    "jsconfig": "dist/index.js"
  },
  "devDependencies": {
    "@changesets/cli": "2.24.3",
    "@types/node": "18.7.6",
    "ava": "4.3.1",
    "del-cli": "5.0.0",
    "typescript": "4.7.4",
    "xo": "0.51.0"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "jsconfig",
    "tsconfig",
    "ava",
    "eslint",
    "prettier",
    "sync",
    "package",
    "config"
  ],
  "dependencies": {
    "rambda": "7.2.1",
    "read-pkg-up": "9.1.0",
    "write-pkg": "5.1.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
