{
  "version": "1.6.0",
  "type": "module",
  "exports": "./dist/index.js",
  "name": "@stayradiated/jsconfig",
  "description": "My personal config files for Javascript projects.",
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/stayradiated/jsconfig#readme",
  "bugs": {
    "url": "https://github.com/stayradiated/jsconfig/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/jsconfig.git"
  },
  "scripts": {
    "tidy": "xo --fix",
    "test": "ava",
    "build": "del-cli dist && tsc",
    "update-jsconfig": "update-jsconfig",
    "publish": "np"
  },
  "bin": {
    "update-jsconfig": "bin/update-jsconfig"
  },
  "devDependencies": {
    "ava": "3.15.0",
    "del-cli": "3.0.1",
    "np": "7.5.0",
    "typescript": "4.3.2",
    "xo": "0.40.2"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "jsconfig",
    "tsconfig",
    "ava",
    "eslint",
    "prettier",
    "sync",
    "package",
    "config"
  ],
  "dependencies": {
    "read-pkg": "6.0.0",
    "read-pkg-up": "8.0.0",
    "write-pkg": "4.0.0"
  },
  "__comment": "The following configs are managed by @stayradiated/jsconfig",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "eslintConfig": {
    "extends": "stayradiated"
  }
}
